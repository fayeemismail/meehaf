            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control" hidden/>
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <select id="dateRange" class="form-select" onchange="updateDateRange()">
                                <option value="">Select Date Range</option>
                                <option value="daily">Daily</option>
                                <option value="LastWeek">Last week</option>
                                <option value="yearly">Yearly</option>
                                <option value="custom">Custom</option>
                            </select>
                        </div>
                        <div class="col-lg-4 col-md-6 d-none" id="customDateRange">
                            <input type="date" id="startDate" class="form-control" />
                            <input type="date" id="endDate" class="form-control" />
                        </div>
                    </div>
                </header>
        
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order Number</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Total Amount</th>
                                    <th>Discount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Payment Method</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orderList.forEach((order, index) => { %>
                                    <tr>
                                        <td style="color:brown; font-weight: bold;"><%= (currentPage - 1) * limit + index + 1 %></td>
                                        <td style="color:brown; font-weight: bold;"><%= order.billingAddress.userName %></td>
                                        <td style="color:brown; font-weight: bold;"><%= order.billingAddress.email %></td>
                                        <td style="color:brown; font-weight: bold;">₹<%= order.totalAmount.toFixed(2) %></td>
                                        <td style="color:brown; font-weight: bold;">₹<%= order.claimedAmount ? order.claimedAmount.toFixed(2) : '0.00' %></td>
                                        <td>
                                            <span class="badge rounded-pill 
                                                <% if (order.orderStatus === 'Delivered') { %>
                                                    badge-success
                                                <% } else if (order.orderStatus === 'returned') { %>
                                                    badge-info
                                                <% } else if (order.orderStatus === 'Pending') { %>
                                                    badge-warning
                                                <% } else { %>
                                                    badge-danger
                                                <% } %>">
                                                <%= order.orderStatus %>
                                            </span>
                                        </td>
                                        <td style="color:brown; font-weight: bold;"><%= new Date(order.createdAt).toDateString() %></td>
                                        <td style="color:brown; font-weight: bold;"><%= order.paymentMethod %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="pagination-area mt-15 mb-50">
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-start">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage - 1 %>&limit=<%= limit %>&dateRange=<%= dateRange %>&startDate=<%= startDate %>&endDate=<%= endDate %>">
                                    <i class="material-icons md-chevron_left"></i>
                                </a>
                            </li>
                        <% } %>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>&dateRange=<%= dateRange %>&startDate=<%= startDate %>&endDate=<%= endDate %>"><%= i %></a>
                            </li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= currentPage + 1 %>&limit=<%= limit %>&dateRange=<%= dateRange %>&startDate=<%= startDate %>&endDate=<%= endDate %>">
