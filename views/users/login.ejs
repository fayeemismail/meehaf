<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
    <link rel="stylesheet" href="/user/login_assets/css/style.css">

    <style>
        .social-media .social-icon .fa-google {
            color: rgb(13, 225, 2) !important;
        }
    </style>
    <style>
        .toggle-password {
            cursor: pointer;
            float: right;
            margin-right: 10px;
            margin-top: -30px;
            position: relative;
            z-index: 2;
        }
    </style>
</head>
<body>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center" style="margin-top: -70px;">
            <div class="col-md-12 col-lg-10">
                <div class="wrap d-md-flex">
                    <div class="img" style="background-image: url(user/login_assets/images/cr-bla.png);">
                    </div>
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Sign In</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center">
                                        <span class="fa fa-google"></span>
                                    </a>
                                </p>
                            </div>
                        </div>
                        <form action="/authUser" method="post" class="signin-form">
                            <div class="form-group mb-3">
                                <% if (typeof message !== 'undefined') { %>
                                    <p class="text-danger"><%= message %></p>
                                <% } %>
                                <label class="label" for="email">User Email</label>
                                <input type="email" value="faheem123@gmail.com" class="form-control" placeholder="User email" name="userEmail" required>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" for="password">Password</label>
                                <input type="password" class="form-control" value="User@123" placeholder="Password" name="userPassword" required id="userPassword">
                                <span toggle="#userPassword" class="fa fa-fw fa-eye toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                            </div>
                            <div class="w-50 text-left">
                                <a href="/forgotPass">Forgot Password</a>
                            </div>
                        </form>
                        <p class="text-center">Create new account? <a href="/register">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/user/login_assets/js/jquery.min.js"></script>
<script src="/user/login_assets/js/popper.js"></script>
<script src="/user/login_assets/js/bootstrap.min.js"></script>
<script src="/user/login_assets/js/main.js"></script>

<script>
    $(document).on('click', '.toggle-password', function() {
        $(this).toggleClass('fa-eye fa-eye-slash');
        var input = $($(this).attr('toggle'));
        if (input.attr('type') == 'password') {
            input.attr('type', 'text');
        } else {
            input.attr('type', 'password');
        }
    });
</script>
</body>
</html>
