			logoutLink.style.display = "none";

			// Direct to login page on account link click
			accountLink.href = "/login";
		}

		// Hide the dropdown menu if clicked outside
		window.addEventListener("click", function (event) {
			if (!event.target.matches('#accountLink')) {
				if (dropdownMenu.style.display === "block") {
					dropdownMenu.style.display = "none";
				}
			}
		});
	});
   

    function removeProduct(productId) {
        fetch('/removeCart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId: productId })
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.querySelector(`button[onclick="removeProduct('${productId}')"]`).closest('tr').remove();
                    updateSubtotal();
                }
                window.location.reload()
            })
            .catch(error => console.error('Error:', error));
    }




    //INCREAMENTING STOCK 
    function increamentStock(event , productId){
        event.preventDefault()
        let currentStock = document.getElementById(`quantity-${productId}`)
        
        const stock = Number(currentStock.innerText);
        
        const stockDetails  = {
            productId: productId,
            stock: stock + 1
        }

        fetch('/increament', {
            method: 'POST',
            headers:{
                'Content-Type' : 'application/json'
            },
            body: JSON.stringify(stockDetails)
        })
        .then(response => response.json())
        .then(data => {
            if(data.stock){
                currentStock.innerText = data.stock
                const total = document.getElementById(`total-${productId}`).innerText = `â‚¹ ${data.total}`
                fetch('/subTotalChange', {
            method:'POST',
            headers:{
                'Content-Type' : 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            const productData = data.productData
            let subtotal = 0
            productData.forEach(element => {
                subtotal += element.Product.price * element.quantity
            });
            document.getElementById('subtotal').innerText = `â‚¹${subtotal}`;
            document.getElementById('total').innerText = `â‚¹${subtotal}`
        })
        .catch(error => {
            console.log(error)
        })
            }else if(data.error  == 1){
